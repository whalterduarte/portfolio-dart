{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently -n 'PORTFOLIO,ADMIN' -c 'blue,green' -p '[{name}]' 'npm run dev -w portfolio -- -p 3003' 'npm run dev -w admin -- -p 3002'",
    "build:admin": "npm run build -w admin",
    "build:portfolio": "npm run build -w portfolio",
    "build": "npm-run-all --parallel build:*"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^7.0.1",
    "@mui/material": "^7.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "axios": "^1.8.4",
    "jsonwebtoken": "^9.0.2",
    "next": "15.2.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-vertical-timeline-component": "^3.5.3",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.1.2",
    "eslint": "^9",
    "eslint-config-next": "15.2.4",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
